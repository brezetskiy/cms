		<br />
	<table>
		<tmpl:nearby>
			<tr>
				<td class="news_date">
					{$date} 
				</td>
				<td class="news_title">
				{if $content}
					<a class="{$class}" href="/{#LANGUAGE_URL}news/{$url}.html">{$headline}</a>
