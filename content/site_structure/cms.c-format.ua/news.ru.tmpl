{if empty($content)}
		<table class="news_archive">

	{if $show_subcont == 0}
	<tmpl:news>
		{if !empty($subtitle_year)}
			<tr class="year">
				<td></td>
				<td>{$subtitle_year}</td>
			</tr>
		{/if}
		<tr>
			<td class="news_date">
				{$date}
				{if !empty($image_src)}<br><div class="news_image"><img src="{$image_src}"></div>{/if}
			</td>
			<td class="news_title">
				{if $has_content}
					<a href="/{#LANGUAGE_URL}news/{$url}.html">{$headline}</a>
				{else}
					{$headline}
				{/if}
				{if !empty($announcement)}
					<br><br><span class="comment">{$announcement}</span>
				{/if}
			</td>
		</tr>
	</tmpl:news>
	{else}
		<tmpl:news>
		{if !empty($subtitle_year)}
			<tr class="year">
				<td></td>
				<td><div class="year">{$subtitle_year}</div></td>
			</tr>
		{/if}
		<tr>
			<td class="news_date">
				{$date}
				{if !empty($image_src)}<br><div class="news_image"><img src="{$image_src}"></div>{/if}
			</td>
			<td class="news_title">
				{if $has_content}
					<a href="/{#LANGUAGE_URL}news/{$url}.html">{$headline}</a>
				{else}
					{$headline}
				{/if}
				<div>{$desc}</div>
				
			</td>
		</tr>
	</tmpl:news>
	{/if}
	<tr><td colspan="2" style="text-align:center;padding-top:20px;">{$pages_list}</td></tr>
	{if $remove_date_filter}
	<tr>
		<td></td>
		<td><a href="/{#LANGUAGE_URL}news/{@type}.htm">Убрать фильтр по дате</a></td>
	</tr>
	{/if}
	</table>
{else}
	<div id="content">
		{if $is_previous == 1 || $is_next == 1}
		<div class="post-nav">
		   {if $is_previous == 1}<div class="previous"><a href="/{#LANGUAGE_URL}news/{$previous_url}.html">{$previous_name}</a></div>{/if}
