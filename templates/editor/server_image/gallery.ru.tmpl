<html>
<head>
<title>Вставка изображения</title>
<META HTTP-EQUIV="Content-Type" CONTENT="text/html; CHARSET=Windows-1251">
<META HTTP-EQUIV="imagetoolbar" CONTENT="no">
<LINK href="/design/cms/css/editor/dialog.css" type="text/css" rel="stylesheet">
<script language="JavaScript" src="/js/shared/global.js"></script>
<script>
function checkData() {
	if (document.Form.image_name.value == '') {
		alert('Вы не выбрали картинку!');
		return false;
	}
	window.opener.Form.{$field_name}.value = document.Form.image_name.value;
	window.close();
	return false;
}
</script>
</head>
<body onConte1xtMenu="return false;" onKeyPress="EnterEsc(event);">
<form name="Form" onSubmit="return checkData();">
<input type="hidden" name="image_name" value="">
<table border="0" cellspacing="0" cellpadding="10" width="100%" height="100%">
<tr valign="top">
<td width="200">
	<IFRAME 
		width="100%" height="100%" 
		marginwidth="0" marginheight="0" 
		vspace="0" hspace="0" 
		frameborder="0" scrolling="auto" 
		src="/tools/editor/server_image/iframe.php?field_name={$field_name}&table_name={$table_name}&id={$id}&field_name={$field_name}"
	></IFRAME>
</td>
<td>
	<IFRAME 
		name="preview" scrolling="auto" 
		vspace="0" hspace="0" 
		marginwidth="0" marginheight="0" 
		width="100%" height="100%">
	</IFRAME>
</td>
</tr></table></form>
</body>
</html>