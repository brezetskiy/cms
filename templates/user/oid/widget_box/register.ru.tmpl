
 
<!-- Форма уточнения данных при OID авторизации -->
{if !empty(%_SESSION.oid_clarify_auto)} 	
	<form id="oid_widget__{@oid_widget_uniq_name}_form_clarify_auto" action="/action/user/oid/clarify_auto/" method="POST" enctype="multipart/form-data" style="display:none;">
		<input type="hidden" name="_return_path" value="{%_SESSION.oid_widget.return_path}"> 
		<input type="hidden" name="_a" value="{%_SESSION.oid_clarify_auto.action}">
		<tmpl:clarify_hidden><input type="hidden" name="info[{$name}]" value="{$value}"></tmpl:clarify_hidden>
	</form>	
{/if}
 

<!-- Форма уточнения данных при ручной авторизации -->
<form id="oid_widget__{@oid_widget_uniq_name}_form_clarify_manual" action="/action/user/oid/clarify_manual/" method="post"  enctype="multipart/form-data" style="display:none;">
	<input type="hidden" name="_return_path" value="{%_SESSION.oid_widget.return_path}">
</form>
 

<!----------------- Основная форма ------------------>
<div id="oid_widget__{@oid_widget_uniq_name}" class="oid_widget_box" style="{if empty(%_SESSION.oid_clarify_auto) && empty(%_SESSION.oid_clarify_manual)}display:none;{/if}">
	<i class="oid_widget_box_top"></i> 
	<i class="oid_widget_box_bottom"></i>
	<a href="javascript:void(0);"  onclick="oid_widget__box__close('{@oid_widget_uniq_name}');" title="Закрыть" class="oid_widget_box_close"><img src="/img/user/oid/box/cross_grey.png" border="0" align="absmiddle"></a>    
		
	<div class="oid_widget_box_box">
		<h2>Регистрация</h2>
		<div class="oid_widget_box_content">
			<i class="oid_widget_box-angle angle-tl"></i>
			<i class="oid_widget_box-angle angle-tr"></i> 
			<i class="oid_widget_box-angle angle-bl"></i>
			<i class="oid_widget_box-angle angle-br"></i>   
			
			<div style="padding:25px;">
			
				<div id="oid_widget__error"></div>	
				<div id="oid_widget__warning"></div>
				<div id="oid_widget__ok"></div>
			 
				
				<!--------------------------------------- OID  регистрация --------------------------------------->
				<table class="oid_widget_box_openid" cellpadding="0" cellspacing="0">
				
					<!-- Вывод иконок всех провайдеров (OAuth и OpenID) -->
					<tr id="oid_widget__{@oid_widget_uniq_name}_box_provider_block"  style="{if !empty(%_SESSION.oid_clarify_auto) || !empty(%_SESSION.oid_clarify_manual)}display:none;{/if}">
						<td class="title">Выберите провайдер:</td>
						<td class="field" colspan="2">
							<div class="oid_widget">   
								<tmpl:providers>
									{if $openid_enable}
										<a rel="nofollow" href="javascript:void(0);" onclick="oid_widget__box__openid_open('{@oid_widget_uniq_name}', {$id});"><img src="{$icon}" title="{$name}" style="margin:0px 5px;" border="0" alt="{$name}"/></a>
									{else}	
										<a rel="nofollow" href="javascript:void(0);" onclick="oid_widget__message_clear(); StableWindow('{$dialog_url}', '{$name}', 1);"><img src="{$icon}" title="{$name}"  style="margin:0px 5px;" border="0"  alt="{$name}"/></a>
									{/if}
							    </tmpl:providers>
							</div>	
						</td>
					</tr>  
					<tr id="oid_widget__{@oid_widget_uniq_name}_box_provider_pad" style="{if !empty(%_SESSION.oid_clarify_auto) || !empty(%_SESSION.oid_clarify_manual)}display:none;{/if}"><td colspan="3">&nbsp;</td></tr>
					
					<!-- Вывод форм для OpenID провайдеров -->
					<tmpl:providers> 
						{if $openid_enable}
							<tr id="oid_widget__{@oid_widget_uniq_name}_box_openid_block_{$id}" class="oid_openid">
								<td class="title"><a href="javascript:void(0);" onclick="oid_widget__box__cancel('{@oid_widget_uniq_name}');"><img src="/img/user/oid/box/cross_red.png" border="0" align="absmiddle" title="Отменить" alt="Отменить"></a> Введите {$name} логин:</td>
								<td class="field">   
									<form onsubmit="oid_widget__box__openid_send('{@oid_widget_uniq_name}', {$id}, '{$name}'); return false;">
										<input type="hidden" id="oid_widget__{@oid_widget_uniq_name}_openid_return_path_{$id}" value="{#CURRENT_URL_FORM}">
										<input type="hidden" id="oid_widget__{@oid_widget_uniq_name}_openid_a_{$id}"  value="auth">  
										<input type="hidden" id="oid_widget__{@oid_widget_uniq_name}_openid_provider_{$id}"  value="{$uniq_name}">
										<input type="hidden" id="oid_widget__{@oid_widget_uniq_name}_openid_link_{$id}" value="{$openid_link}">
										<input type='text' id='oid_widget__{@oid_widget_uniq_name}_openid_identifier_{$id}' value='' class='wide'>
									</form>
								</td> 
								<td class="field"><input type="button" onclick="oid_widget__box__openid_send('{@oid_widget_uniq_name}', {$id}, '{$name}');" value="Далее"></td>
							</tr> 
						{/if}
					</tmpl:providers>
					 
					<!-- Уточнение необходимых данных при OID авторизациия / регистрации -->
					{if !empty(%_SESSION.oid_clarify_auto)} 	 
					 	<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_row_title"><td></td><td colspan="2"><div style="white-space: nowrap; font-size:11px; color:#777; margin-bottom:5px;">Пожалуйста, уточните параметры</div></td></tr>
					 	
						{if %_SESSION.oid_clarify_auto.action == 'register'}
							{if empty(%_SESSION.oid_clarify_auto.email)}
								<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_row_email">
									<td class="title">Ваш e-mail:</td>
									<td class="field">
										<form onsubmit="oid_widget__box__clarify_auto_send('{@oid_widget_uniq_name}'); return false;">	
											<input type="text" id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_email" name="clarify_email" value="{%_SESSION.ActionError.clarify_email}" class="wide">
										</form>	
									</td>
								</tr> 
							{/if}
							{if empty(%_SESSION.oid_clarify_auto.name)}
								<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_row_name">
									<td class="title">Вашe имя:</td>
									<td class="field">
										<form onsubmit="oid_widget__box__clarify_auto_send('{@oid_widget_uniq_name}'); return false;">
											<input type="text" id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_name" name="clarify_name" value="{%_SESSION.ActionError.clarify_name}"  class="wide">
										</form>
									</td>
								</tr>
							{/if}
							<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_row_pad"><td colspan="3">&nbsp;</td></tr>
							<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_auto_row_button">
								<td class="title">&nbsp;</td>
								<td colspan="2" class="field">
									<input type="button" onclick="oid_widget__box__clarify_auto_send('{@oid_widget_uniq_name}');" value="Зарегистрироваться">&nbsp;&nbsp;
									<a href="javascript:void(0);" onclick="oid_widget__box__cancel('{@oid_widget_uniq_name}');" style="text-decoration:none; color:#000;"><img src="/img/user/oid/box/cross_red.png" border="0" align="absmiddle"  title="Отменить" alt="Отменить" style="margin-top:5px;"> Отменить</a>
								</td>
							</tr>
						{/if}
					{/if} 
					
					<tr id="devider_line" style="{if !empty(%_SESSION.oid_clarify_auto) || !empty(%_SESSION.oid_clarify_manual)}display:none;{/if}"><td colspan="3" class="line">&nbsp;</td></tr>
					<tr id="devider_pad" style="{if !empty(%_SESSION.oid_clarify_auto) || !empty(%_SESSION.oid_clarify_manual)}display:none;{/if}"><td colspan="3" style="padding-top: 10px;">&nbsp;</td></tr>
					
					 
					<!--------------------------------------- Стандартная авторизация / регистрация --------------------------------------->
					<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_row_email" style="{if !empty(%_SESSION.oid_clarify_auto) || !empty(%_SESSION.oid_clarify_manual)}display:none;{/if}">
						<td class="title">или введите e-mail:</td>  
						<td class="field">
							<form onsubmit="oid_widget__box__clarify_manual_send('{@oid_widget_uniq_name}', 'validate_email_register'); return false;">
								<input type="text" id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_email" name="manual_email" value="{%_SESSION.oid_clarify_manual.email}" class="wide">
							</form>
						</td>
						<td id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_email_button" class="field"><input type="button" onclick="oid_widget__box__clarify_manual_send('{@oid_widget_uniq_name}', 'validate_email_register');" value="Далее"></td>
					</tr>
					 
					<!-- Уточнение данных при регистрации -->
					<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_row_register_name" {if empty(%_SESSION.oid_clarify_manual.action) || %_SESSION.oid_clarify_manual.action != 'register'}style="display:none;"{/if}>
						<td class="title">Введите Ваше имя:</td>
						<td class="field">
							<form onsubmit="oid_widget__box__clarify_manual_send('{@oid_widget_uniq_name}', 'register'); return false;">
								<input type="text" id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_name" name="name" value="" class="wide">
							</form>
						</td>
						<td class="field">&nbsp;</td>
					</tr> 
					<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_row_register_passwd" {if empty(%_SESSION.oid_clarify_manual.action) || %_SESSION.oid_clarify_manual.action != 'register'}style="display:none;"{/if}>
						<td class="title">Пароль:</td>
						<td class="field">
							<form onsubmit="oid_widget__box__clarify_manual_send('{@oid_widget_uniq_name}', 'register'); return false;">
								<input type="text" id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_passwd" name="passwd" value="" class="wide"> 
								<a href="javascript:void(0);" onclick="oid_widget__box__reload_passwd();" title="Обновить пароль"><img src="/img/user/oid/box/reload.png" border="0" align="absmiddle" alt="Обновить"></a>
							</form>    
						</td>
						<td class="field">&nbsp;</td> 
					</tr> 
					<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_row_register_comment" {if empty(%_SESSION.oid_clarify_manual.action) || %_SESSION.oid_clarify_manual.action != 'register'}style="display:none;"{/if}>
						<td class="title">&nbsp;</td>
						<td class="field"><span class="comment">* Пароль сгенерирован автоматически</span><br/><br/></td>
						<td class="field">&nbsp;</td>
					</tr>  
					<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_row_register_captcha" {if !CMS_USE_CAPTCHA || empty(%_SESSION.oid_clarify_manual.action) || %_SESSION.oid_clarify_manual.action != 'register'}style="display:none;"{/if}>
						<td class="title">И символы на картинке:</td>
						<td class="field">
							<div style="float:left;" id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_captcha_html">{$manual_captcha_html}</div> 
							<div style="float:left; margin-left:5px;">
								<form onsubmit="oid_widget__box__clarify_manual_send('{@oid_widget_uniq_name}', 'register'); return false;">
									<input type="text" maxlength="6" id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_captcha" name="manual_captcha_value" class='short' style="width:165px;">
								</form> 
							</div>
						</td>   
						<td class="field"></td> 
					</tr>
					<tr id="oid_widget__{@oid_widget_uniq_name}_clarify_manual_row_register_button" {if empty(%_SESSION.oid_clarify_manual.action) || %_SESSION.oid_clarify_manual.action != 'register'}style="display:none;"{/if}>
						<td class="title">&nbsp;</td>
						<td colspan="2" class="field">
							<br/><input type="button" onclick="oid_widget__box__clarify_manual_send('{@oid_widget_uniq_name}', 'register');" value="Зарегистрироваться">&nbsp;&nbsp;
							<a href="javascript:void(0);" onclick="oid_widget__box__cancel('{@oid_widget_uniq_name}');" style="text-decoration:none; color:#000;"><img src="/img/user/oid/box/cross_red.png" border="0" align="absmiddle"  title="Отменить" alt="Отменить" style="margin-top:5px;"> Отменить</a>
						</td>
					</tr>
				</table>
			</div>
		</div>  
	</div>
</div>
